<%= form_for fair_use_test do |f|%>
	<%= f.text_field :name %>
	<%= f.hidden_field :result, :value =>  result=="Fair Use" ? true : false %>
	<%= f.hidden_field :test_answer_id, :value => test_answer.id%>
	<%= f.submit "Store!"%>
	<%= link_to "Cancel" , "test_answers/delete/#{@test_answer.id}"%>
<%end%>